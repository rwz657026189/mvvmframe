<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rwz.ui.count_down_btn.HorizontalProgressBarWithNumber
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/update_version_progress_bar"
            android:max="100"
            app:progress_reached_color="@color/colorPrimary"
            app:progress_text_color="@color/colorPrimary"
            android:padding="@dimen/h_16"
            android:layout_gravity="center"/>

    </FrameLayout>
</layout>
